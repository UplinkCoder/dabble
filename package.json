{
	"name": "dabble",
	"description": "A simple REPL for DMD on Win32",
	"authors": ["cal"],
	"homepage": "",
	"license": "Boost v1.0",        
    
    "subPackages": [
 		{
            "name": "repl",            
            "targetType": "executable",                        
            "targetPath":"./bin",
            "platforms": ["windows", "posix"],                 
            "targetName":"repl", 	

			"dflags-posix": [
				"-defaultlib=libphobos2.so", 
				"-release"
			],
			
			"libs-posix": [
				"dl"
			],
									
			"buildTypes": {
				"debug": { "buildOptions": ["debugInfo"] },
				"release": { "buildOptions": ["releaseMode"] }
			},						
            
            "dependencies": {  
                "pegged":"~master"    
            },
            
			"importPaths": ["."], 
			            
			"mainSourceFile": "src/main.d",            
            
            "excludedSourceFiles": [
                "src/sourcebrowser.d",
				"src/DCD/client.d",
				"src/DCD/server.d",
				"src/DCD/dscanner/main.d",
				"src/DCD/dscanner/analysis/*",
				"src/DCD/msgpack-d/example/*"
            ]                        
        },
 		{
 			"name": "browser",
 			"targetType": "executable",            
            "targetPath":"./bin",
            "platforms": ["windows","posix"],                 
            "targetName":"browser",            			
			"importPaths": ["."], 
			
			"buildTypes": {
				"debug": { "buildOptions": ["debugInfo"] },
				"release": { "buildOptions": ["releaseMode"] }
			},
			
			"sourcePaths" : [
                "src/DCD"              
            ],
			
			"sourceFiles": ["src/sourcebrowser.d"],						
 			"mainSourceFile": "src/sourcebrowser.d",
			
			"excludedSourceFiles": [                
				"src/DCD/client.d",
				"src/DCD/server.d",
				"src/DCD/dscanner/main.d",
				"src/DCD/dscanner/analysis/*",
				"src/DCD/msgpack-d/example/*"
            ]
 		}
 	]        
}