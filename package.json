{
	"name": "dabble",
	"description": "A simple REPL for DMD on Win32",
	"authors": ["cal"],
	"homepage": "",
	"license": "Boost v1.0",

  "dependencies": {  
    "pegged":   "~master",    
    "vibe-d":   "~master",
    "libevent": "~master",
    "libev":    "~master",
    "openssl":  "~master"
	},

  "targetPath":"./",
    
  "configurations": [
		{
			"name": "server",
			"targetType": "executable",
			"platforms": ["windows"],			
      "versions": ["VibeCustomMain"],
      "targetName":"dabble-server",         
      
      "sourceFiles": [
        "web/source/app.d",
        "web/source/sourcebrowser.d",
        "dabble/actions.d",
        "dabble/defs.d",
        "dabble/loader.d",
        "dabble/parser.d",
        "dabble/repl.d",
        "dabble/sharedlib.d",
        "dabble/util.d"    
      ]
		},
		{
			"name": "console",
			"targetType": "executable",
			"platforms": ["windows"],     
      "versions": ["VibeCustomMain"],      
      "targetName":"dabble-console",
			
      "sourceFiles": [        
        "dabble/main.d",
        "dabble/actions.d",
        "dabble/defs.d",
        "dabble/loader.d",
        "dabble/parser.d",
        "dabble/repl.d",
        "dabble/sharedlib.d",
        "dabble/util.d"    
      ]
		}]
}