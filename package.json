{
	"name": "dabble",
	"description": "A simple REPL for DMD on Win32",
	"authors": ["cal"],
	"homepage": "",
	"license": "Boost",

  "dependencies": {  
    "pegged":   "~master"
	},

  "targetPath":"./",
    
  "configurations": [
		{
			"name": "server",
			"targetType": "executable",
			"platforms": ["windows"],						
      "targetName":"dabble-server",
      
      "dependencies": {
        "vibe-d":   "~master",
        "libevent": "~master",
        "libev":    "~master",
        "openssl":  "~master"
      },
      
      "sourceFiles": [
        "web/source/app.d",
        "web/source/sourcebrowser.d",
        "dabble/actions.d",
        "dabble/defs.d",
        "dabble/loader.d",
        "dabble/parser.d",
        "dabble/repl.d",
        "dabble/sharedlib.d",
        "dabble/util.d"    
      ]
		},
		{
			"name": "console",
			"targetType": "executable",
			"platforms": ["windows"],      
      "targetName":"dabble-console",
			
      "sourceFiles": [        
        "dabble/main.d",
        "dabble/actions.d",
        "dabble/defs.d",
        "dabble/loader.d",
        "dabble/parser.d",
        "dabble/repl.d",
        "dabble/sharedlib.d",
        "dabble/util.d"    
      ]
		}]
}