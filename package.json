{
	"name": "dabble",
	"description": "A simple REPL for DMD on Win32",
	"authors": ["cal"],
	"homepage": "",
	"license": "Boost v1.0",        
    
    "subPackages": [
 		{
            "name": "repl",            
            "targetType": "executable",                        
            "targetPath":"./bin",
            "platforms": ["windows","posix"],                 
            "targetName":"repl",                        
            
            "dependencies": {  
                "pegged":"~master"    
            },
            
            "sourcePaths" : [
                "dabble"              
            ],
            
            "mainSourceFile": "dabble/main.d",
            
            "excludedSourceFiles": [
                "dabble/sourcebrowser.d"
            ]                        
        },
 		{
 			"name": "browser",
 			"targetType": "executable",            
            "targetPath":"./bin",
            "platforms": ["windows","posix"],                 
            "targetName":"browser",
            
 			"sourceFiles": [
                "dabble/sourcebrowser.d"
            ]
 		}
 	]        
}